{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES6",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        // esModuleInterop позволяет работать с пакетами, которые используют common js 
        // как с обычными пакетами с помощью import
        "esModuleInterop": true,
        // 
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}